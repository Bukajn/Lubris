<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
   >

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="[[Status]]"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="[[nr]]"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4dp">

            <TextView
                android:id="@+id/lekcja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[[lekcja]]"/>

            <TextView
                android:id="@+id/nauczyciel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[[nauczyciel]]"/>
            <TextView
                android:id="@+id/nowalekcja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[[nowalekcja]]"/>
            <TextView
                android:id="@+id/nowynauczyciel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[[nowy nauczyciel]]"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/sala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[[sala]]"/>
            <TextView
                android:id="@+id/nowasala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[[nowasala]]"
                android:layout_marginLeft="1dp"/>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>