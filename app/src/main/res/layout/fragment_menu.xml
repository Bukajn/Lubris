<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wpiszNick_text"
        android:text="Nazwa użytkownika"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nick_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wpiszNick_text"
        android:hint="Enter name"
        android:inputType="text"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/textColor"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wpiszPass_text"
        android:layout_below="@id/nick_input"
        android:text="Hasło"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pass_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wpiszPass_text"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/textColor"
        android:textSize="18sp" />

    <Button
        android:id="@+id/accpet_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_input"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="zapisz" />

    <ProgressBar
        android:id="@+id/progresbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accpet_btn"
        android:visibility="invisible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progresbar"
        android:id="@+id/zalogowanyText"
        android:text="Niezalogowany"
        android:textSize="20sp" />


</RelativeLayout>

